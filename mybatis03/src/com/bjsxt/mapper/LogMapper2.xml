	<select id="selByAccinAccout" resultType="log">
		select * from log 
		<where>
			<choose>
				<when test="accin!=null and accin!=''">
					and accin=#{accin}
				</when>
				<when test="accout!=null and accout!=''">
					and accout=#{accout}
				</when>
			</choose>
		</where>
	</select>
	
